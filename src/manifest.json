{
  "manifest_version": 3,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bixi.com/*"
      ],
      "js": [
        "src/extension.tsx"
      ]
    }
  ],
  "host_permissions": [
    "*://*.bixi.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "mon-bixi.css"
      ],
      "matches": [
        "https://secure.bixi.com/*"
      ],
      "{{chrome}}.use_dynamic_url": true
    }
  ],
  "{{firefox}}.browser_specific_settings": {
    "gecko": {
      "id": "@mon-bixi.xou816",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}