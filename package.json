{
  "name": "mon-bixi",
  "description": "Faites le bilan de votre année 2025 à Bixi !",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "watch": "vite build --watch --mode development",
    "zip": "cd dist && zip -r -FS \"../mon-bixi-$TARGET-$(git rev-parse --short HEAD).zip\" * --exclude '*.git*'",
    "pack": "rm -rf dist && npm run build && npm run zip",
    "pack:chrome": "export TARGET=chrome && npm run pack",
    "pack:firefox": "export TARGET=firefox && npm run pack"
  },
  "dependencies": {
    "fastest-levenshtein": "^1.0.16",
    "js-quadtree": "^3.3.6",
    "konva": "^10.0.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-konva": "^19.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/three": "^0.182.0",
    "@types/webextension-polyfill": "^0.10.0",
    "@vitejs/plugin-react": "^4.2.1",
    "simplify-js": "^1.2.4",
    "three": "^0.182.0",
    "typescript": "~5.6.3",
    "vite": "^7.3.0",
    "vite-plugin-compile-time": "^0.4.6",
    "vite-plugin-web-extension": "^4.0.0",
    "webextension-polyfill": "^0.10.0"
  }
}
