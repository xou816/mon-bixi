{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bixi.com/*"
      ],
      "js": [
        "src/extension.tsx"
      ]
    }
  ],
  "host_permissions": [
    "*://*.bixi.com/*",
    "cookies"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "mon-bixi.css"
      ],
      "matches": [
        "https://secure.bixi.com/*"
      ],
      "use_dynamic_url": true
    }
  ]
}